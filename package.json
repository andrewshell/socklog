{
  "name": "@andrewshell/socklog",
  "version": "0.2.2",
  "description": "WebSocket-based logging web components using Lit",
  "type": "module",
  "main": "./dist/socklog.cjs",
  "module": "./dist/socklog.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/socklog.js",
      "require": "./dist/socklog.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "jsdelivr": "./dist/socklog.umd.js",
  "unpkg": "./dist/socklog.umd.js",
  "scripts": {
    "dev": "vite",
    "dev:server": "node demo/server.js",
    "build": "vite build && tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "websocket",
    "logging",
    "web-components",
    "lit"
  ],
  "author": "Andrew Shell <andrew@andrewshell.org>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrewshell/socklog.git"
  },
  "bugs": {
    "url": "https://github.com/andrewshell/socklog/issues"
  },
  "homepage": "https://github.com/andrewshell/socklog#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.48.1",
    "vite": "^6.0.3",
    "ws": "^8.18.3"
  }
}
